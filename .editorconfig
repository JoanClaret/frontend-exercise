; http://editorconfig.org

root = true

[*]
insert_final_newline = true

[*.SCSS]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.md]
indent_size = 4

[*.html]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[node_modules/**.js]
codepaint = false
